{
  // ========================
  // 1. エディタの基本設定
  // ========================
  "editor.fontFamily": "'HackGen'",
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "auto",
  "editor.largeFileOptimizations": true,
  "editor.formatOnSave": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,

  // ========================
  // 2. 言語別のエディタ設定
  // ========================
  "[tex]": {
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.formatOnSave": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "[latex]": {
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "[bibtex]": {
    "editor.tabSize": 2,
    "editor.wordWrap": "on"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },

  // ========================
  // 3. LaTeX Workshop 関連設定
  // ========================
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipe.default": "latexmk",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latexindent.path": "latexindent",
  "latex-workshop.latexindent.args": [
    "%TMPFILE%",
    "-c=%DIR%/",
    "-y=defaultIndent: '%INDENT%'"
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "ptex2pdf",
      "command": "ptex2pdf",
      "args": ["-l", "-ot", "-kanji=utf8", "-synctex=1", "-output-directory=out", "%DOC%"]
    },
    {
      "name": "pbibtex",
      "command": "pbibtex",
      "args": ["-kanji=utf8", "-output-directory=out", "%DOCFILE%"]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=out",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "ptex2pdf",
      "tools": ["ptex2pdf"]
    },
    {
      "name": "ptex2pdf -> pbibtex -> ptex2pdf*2",
      "tools": ["ptex2pdf", "pbibtex", "ptex2pdf", "ptex2pdf"]
    },
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "out/*.aux",
    "out/*.bbl",
    "out/*.blg",
    "out/*.idx",
    "out/*.ind",
    "out/*.lof",
    "out/*.lot",
    "out/*.out",
    "out/*.toc",
    "out/*.acn",
    "out/*.acr",
    "out/*.alg",
    "out/*.glg",
    "out/*.glo",
    "out/*.gls",
    "out/*.ist",
    "out/*.fls",
    "out/*.log",
    "out/*.fdb_latexmk",
    "out/*.synctex.gz",
    "out/*.nav",
    "out/*.snm",
    "out/*.vrb"
  ],

  // ========================
  // 4. Git・バージョン管理
  // ========================
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  "git-graph.showInSideBar": true,
  "git-graph.showInStatusBar": true,
  "git-graph.defaultColumnVisibility": {
    "Date": true,
    "Author": true,
    "Commit": true
  },
  "git-graph.dateFormat": "YYYY-MM-DD HH:mm:ss",
  "git-graph.retainContextWhenHidden": true,

  // ========================
  // 5. 拡張機能・開発支援
  // ========================
  "cmake.configureOnOpen": true,
  "code-runner.runInTerminal": true,
  "python.createEnvironment.trigger": "off",
  "RainbowBrackets.depreciation-notice": false,
  "redhat.telemetry.enabled": true,
  "remoteHub.commitDirectlyWarning": "off",
  "yaml.schemas": {
    "file:///c%3A/Users/soumi/.vscode/extensions/atlassian.atlascode-3.4.7/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },

  // ========================
  // 6. ファイル操作・保存
  // ========================
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "window.confirmSaveUntitledWorkspace": false,
  "workbench.editorAssociations": {
    "*.pdf": "latex-workshop-pdf-hook"
  },

  // ========================
  // 7. 外観・UI系
  // ========================
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "window.zoomLevel": -1,

  // ========================
  // 8. セキュリティ・信頼関係
  // ========================
  "security.allowedUNCHosts": ["wsl.localhost"],
  "security.workspace.trust.untrustedFiles": "prompt",

  // ========================
  // 9. その他
  // ========================
  "database-client.autoSync": true
}
